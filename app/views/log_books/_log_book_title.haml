.section-title
  %table
    %tr
      %td.serif-sc-font.big-font-size
        ="in "
        =link_to @log_book.title, @log_book
      %td
        -if @show_archived_sections
          %td.right=link_to "Hide archived sections", edit_log_book_path(@log_book.id), {class: "styled-button-blue-gray"}
        -else
          %td.right=link_to "Show archived sections", edit_log_book_path(@log_book.id, show_archived: true), {class: "styled-button-blue-gray"}


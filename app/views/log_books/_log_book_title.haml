.row-fluid
  .span7
    %h1=link_to "editing #{@log_book.title}", @log_book
  .span5
    -if @show_archived_sections
      =link_to " Hide archived sections", edit_log_book_path(@log_book.id), {class: "btn icon-eye-close btn-warning btn-mini pull-right"}
    -else
      =link_to " Show archived sections", edit_log_book_path(@log_book.id, show_archived: true), {class: "btn icon-eye-open btn-danger btn-mini pull-right"}

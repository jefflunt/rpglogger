#log-book-index
  .section-title
    %span{:class=>'serif-sc-font big-font-size color-orange'}='Your log books'
    %br
    %span{:class=>'serif-sc-font small-font-size'}=link_to '&nbsp;&nbsp;&nbsp;'.html_safe + 'create new', new_log_book_path
    %br
    %br
  .compact-table
    %table
      %tr
        %th{:class=>'column-string'}='Title'
        %th{:class=>'column-string'}='Game'
        %th{:class=>'column-integer'}='No.&nbsp;of&nbsp;Items'.html_safe
      - @log_books.each do |log_book|
        %tr
          %td{:class=>'column-string'}=link_to log_book.title.html_safe, log_book
          %td{:class=>'column-string'}=log_book.game.name.html_safe
          %td{:class=>'column-integer'}=log_book.world_objects.count
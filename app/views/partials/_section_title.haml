%table{width: "100%"}
  %tr
    %td.big-font-size.color-orange=@section.name
    -if current_user && current_user.can_fully_manage?(@section.log_book)
      -if @deleted_items_being_shown
        %td.right=link_to "Hide deleted", section_path(@section.id), {class: "styled-button-blue-gray"}
      -else
        %td.right=link_to "Show deleted", section_path(@section.id, show_deleted: true), {class: "styled-button-blue-gray"}
    -else
      %td
  -if current_user && current_user.can_fully_manage?(@section.log_book)
    %tr
      %td.serif-sc-font.small-font-size=link_to '&nbsp;&nbsp;&nbsp;'.html_safe + 'edit columns', edit_section_path(@section)
      %td
%br
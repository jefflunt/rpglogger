%table
  %tr
    %td.big-font-size.color-orange=@section.name
    -if current_user && current_user.can_manage_world_objects_in?(@section.log_book)
      -if @show_archived_objects
        %td=link_to "Hide archived", section_path(@section.id), {class: "styled-button-blue-gray"}
      -else
        %td=link_to "Show archived", section_path(@section.id, show_archived: true), {class: "styled-button-blue-gray"}
    -else
      %td
  -if current_user && current_user.can_fully_manage?(@section.log_book)
    %tr
      %td.serif-sc-font.small-font-size=link_to '&nbsp;&nbsp;&nbsp;'.html_safe + 'edit columns', edit_section_path(@section)
      %td
%br
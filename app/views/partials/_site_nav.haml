#site_nav
  %table{:class=>'max-width'}
    %tr
      %th{:class=>'site-title left'}
        %span
          =image_tag '/logo_small.png', :align=>'left'
        %span=link_to '&nbsp;rpglogger'.html_safe, root_path
      %th
        #site-links{:class => 'compact-table center'}
          %table
            %tr
              %th=link_to 'Log Books', log_books_path
              -if current_user
                %th=current_user.nickname.nil? ? (link_to current_user.name + ' / Logout', signout_path) : (link_to current_user.nickname + ' / Logout', signout_path)
              -else
                %th=link_to 'Login', '/sessions/new'
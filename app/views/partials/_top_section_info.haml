%table{:class=>'max-width'}
  %tr
    %th{:class=>'site-title left', :width=>'30%'}
      %span
        =image_tag 'logo_small.png', :align=>'left'
      %span=link_to '&nbsp;rpglogger'.html_safe, root_path
    %td=center_message
    
    -if current_user
      %th{:width=>'8%'}=link_to username_for_top_section(current_user), log_books_path
      %th{:width=>'8%'}=current_user.nickname.nil? ? (link_to 'Logout', signout_path) : (link_to 'Logout', signout_path)
    -else
      %th
      %th=link_to 'Login', '/sessions/new'

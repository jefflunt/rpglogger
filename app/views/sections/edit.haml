.section-title
  %span{:class=>'serif-sc-font big-font-size'}=link_to "#{@section.name} ", section_path(@section)
  %span{:class=>'serif-sc-font big-font-size'}='attributes'
#attributes_form{:class=>'serif-sc-font compact-form right'}
  %table
    %tr
      %td
        =form_for @section do |section_form|
          %table
            %tr
              %th='Section Title'
              %td
            %tr
              %td=section_form.text_field :name
              %td
            %tr
              %th='Section Attributes'
              %td
            =section_form.fields_for :section_properties do |section_properties_form|
              %tr
                %td=section_properties_form.text_field :name
                %th=link_to 'delete!', section_section_property_path(@section, section_properties_form.object), {:method => :delete}
            %tr
              %td=section_form.submit 'Save', :class => 'styled-button-dark-red'
          =fields_for :section_properties do |new_section_properties_form|
            %td        
              %table
                %tr
                  %th='New Attributes (comma-separated)'
                %tr
                  %td=new_section_properties_form.text_field :new_section_property_names
                %tr
                  %th='Attribute Type'
                %tr
                  %td=collection_select new_section_properties_form.object, :data_type, SectionProperty.all_data_types, :to_s, :to_s
                %tr
                  %td=section_form.submit "Add attributes", :class => 'styled-button-dark-red'
    